{
    "name": "symplify/easy-coding-standard",
    "description": "Use coding standard Fixers and Sniffers with 0-knowledge.",
    "require": {
        "php": "^7.1",
        "symfony/console": "^3.2",
        "nette/di": "^2.4",
        "nette/bootstrap": "^2.4",
        "nette/utils": "^2.4",
        "nette/neon": "^2.4",
        "tracy/tracy": "^2.4",
        "symplify/package-builder": "^1.4",
        "symplify/sniff-runner": "@dev",
        "symplify/fixer-runner": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Symplify\\EasyCodingStandard\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Symplify\\EasyCodingStandard\\Tests\\": "tests"
        }
    },
    "repositories": [
        { "type": "path", "url": "packages/SniffRunner", "options": { "symlink": true } },
        { "type": "path", "url": "packages/FixerRunner", "options": { "symlink": true } },
        { "type": "path", "url": "packages/ChangedFilesDetector", "options": { "symlink": true } }
    ]
}
